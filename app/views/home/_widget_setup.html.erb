<div id="widget_setup">
	<h2>Widget Setup</h2>
	<div class="column_1">
		<div class="module">
			<div class="module_head">Available Widgets</div>
			<div class="module_body">
				<ul>
					<% @widgets.each do |widget| %>
						<li><%= widget.name %></li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
	<div class="column_2">
		<div class="module">
			<div class="module_head">Page Layout</div>
			<div class="module_body">
				<div id="col1_area">
					<ul>
						<% @widgets.each do |widget| %>
							<% if widget.col_num == 1 && widget.active == true %>
								<li><%= widget.name %></li>
							<% end %>
						<% end %>
					</ul>
				</div>
				<div id="col2_area">
					<ul>
						<% @widgets.each do |widget| %>
							<% if widget.col_num == 2 && widget.active == true %>
								<li><%= widget.name %></li>
							<% end %>
						<% end %>
					</ul>
				</div>
				<div id="col3_area">
					<ul>
						<% @widgets.each do |widget| %>
							<% if widget.col_num == 3 && widget.active == true %>
								<li><%= widget.name %></li>
							<% end %>
						<% end %>
					</ul>
				</div>
				<div style="clear:both;"></div>
			</div>
		</div>
	</div>
	<div style="clear:both;"></div>	
</div>
