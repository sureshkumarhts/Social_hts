<%= stylesheet_link_tag 'profile' %>

<h1>Complete Signup with Facebook</h1>
<div id="add_user">
You have successfully logged in with Facebook, now to complete your registration 
please enter the following required data:
<% form_for(@user) do |f| -%>
	<%= f.error_messages %>
	<input type="hidden" id="invite_code" name="invite_code" value="<%= @invite_code %>"/>
	<%= f.hidden_field :facebook_id, :value=>@user.facebook_id %>
	<div id="facebook_required_fields">
		<div class="section_title">Required Fields</div>
		<div class="form_field">
			<label for="login">Login:</label>
			<%= f.text_field :login, :class=>'input_field' %>
		</div>
		<div class="form_field">
			<label for="first_name">First Name:</label>
			<%= f.text_field :first_name, :class=>'input_field' %>
		</div>
		<div class="form_field">
			<label for="last_name">Last Name:</label>
			<%= f.text_field :last_name, :class=>'input_field' %>
		</div>
		<div class="form_field">
			<label for="email">Email</label>
			<%= f.text_field :email, :class=>'input_field'  %>
		</div>
	</div>
	<% if @user.id == nil %>
		<%= submit_tag 'Signup', :id=>'login_btn' %>
	<% else %>
		<%= submit_tag 'Save', :id=>'login_btn' %>
	<% end %>
<% end -%>
</div>