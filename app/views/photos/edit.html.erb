<%= stylesheet_link_tag 'photos' %>

<div id="edit_photo">
	<div id="edit_photo_pic">
		<%= image_tag(@photo.public_filename(:display)) %>
	</div>
	<div id="edit_photo_form">
		<% form_for(@photo) do |f| -%>	
				<%= f.error_messages %>
				
				<%= f.hidden_field :content_type %>
				<%= f.hidden_field :size %>
				<%= f.hidden_field :filename %>

		    	<label for="title">Title:</label>
				<%= f.text_field :title, :class=>'input_field' %>

		    	<label for="description">Description:</label>
				<%= f.text_area :description, :rows=>6, :class=>'input_field' %>

		    	<label for="location">Location:</label>
				<%= f.text_field :location, :class=>'input_field' %>
				
				<label for="tags">Tags:</label>
				<%= f.text_field :tag_list, :class=>'input_field' %>
				
				<label for="photo_album">Select an Album:</label>
				<%= f.collection_select :photo_album_id, PhotoAlbum.find(:all),:id,:title,  {:include_blank => true} %>
				<br/>
				<span class="help_text">Leave blank if you do not want to put into an album</span>
	    	<%= f.submit "Save", :class=>'add_button' %>

		<% end %>
	</div>
	<div style="clear:both;"></div>
</div>

