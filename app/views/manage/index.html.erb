<%= stylesheet_link_tag 'manage' %>

<h1>Manage</h1>
<div class="module">
	<div class="module_head">Manage Users</div>
	<div class="module_body">
		<%= link_to 'Create User' %>		
		<%= jquery_grid :users, {:url => grid_data_users_url } %>

			<%= jquery_grid_table %>
			<%= jquery_grid_pager %>

	</div>
</div>
<div class="module">
	<div class="module_head">Manage Pages</div>
	<div class="module_body">
		<%= link_to 'Create Page' %>
		<br/><br/>
		<% @pages.each do |page| %>
		
		<% end %>
	</div>
</div>
<div class="module">
	<div class="module_head">Manage Widgets</div>
	<div class="module_body">
		
		<%= jquery_grid :widgets, {:url => grid_data_widgets_url } %>
		<center>
			<%= jquery_grid_table %>
			<%= jquery_grid_pager %>
		</center>				
		<%= link_to 'Create Widget' %>
	</div>
</div>
