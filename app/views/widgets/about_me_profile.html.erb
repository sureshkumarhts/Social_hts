<% @user = User.find(user_id) %>

<% content_for :module_header do %>
	<div class="head_left">
		About me
	</div>
	<div class="head_right">
		<div id="expand_collapse_btn">
			<a href="javascript:widget_change_display('<%= @widget_name %>')">
				<img id="<%= @widget_name %>_collapse_img" src="/images/collapse.png"/>
			</a>
		</div>	
	</div>
	<div style="clear:both;"></div>
<% end %>

<% content_for :module_body do %>
	<% if @user.about_me && @user.about_me.length != 0 %>
		<%= @user.about_me %>
	<% else %>
		<span class="help_text">
			<% if current_user == @user %>
				<%= link_to 'Enter some text here now...', edit_user_path(@user) %>
			<% else %>
				<span class="no_text">No text entered yet...</span>
			<% end %>
		</span>
	<% end %>
	<div style="clear:both;"></div>
<% end %>

<% content_for :module_footer do %>
	<% if logged_in? && current_user == @user -%>
		<div class="foot_left"></div>
		<div class="foot_right">
			<span class="edit_link"><%= link_to 'Edit', edit_user_path(@user) %></span>
		</div>
		<div style="clear:both;"></div>
	<% end %>
<% end %>
