<style>
	table#groups th, table#groups td {
		text-align: left;
	}
	
	#content {
		width: 900px;
	}	
</style>

<h2 class="ic-db">Groups</h2>
<%= link_to 'Add Group', '/admin/group_new' %>
<table id="groups">
	<thead>
		<th width="50px">ID</th>
		<th width="170px">Name</th>
		<th width="70px">Creator ID</th>
		<th width="70px">Featured</th>
		<th width="300px">Actions</th>
	</thead>
	<tbody>
		<% @groups.each do |group| %>
			<tr>
				<td><%= group.id %></td>
				<td><%= group.name %></td>
				<td><%= group.creator_id %></td>
				<td><%= group.featured %></td>
				<td>
					<%= link_to 'Edit', '/admin/group_edit?id=' + group.id.to_s %> |
					<%= link_to 'Delete', '/admin/group_delete?id=' + group.id.to_s, :confirm => 'Are you sure you want to delete this group?' %> |
				</td>
			</tr>
		<% end %>
	</tbody>
</table>


<h2 class="ic-db">Group Users</h2>


<h2 class="ic-db">Request for a Group</h2>
<table id="groups">
	<thead>
		
		<th width="170px">User Name</th>
		<th width="170px">Description</th>
		<th width="300px">Actions</th>
	</thead>
	<tbody>
		<% @membership.each do |group| %>
			<tr>
				<td><%= group.user.name %></td>
				<td><%= group.description %></td>
				<td>
				     <%= link_to "Approve", :controller => "memberships", :action => "approve_user", :id => group.id%> |
                                     <%= link_to 'Reject',  :controller => "memberships",  :action => "reject_user", :id => group.id %> |
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
