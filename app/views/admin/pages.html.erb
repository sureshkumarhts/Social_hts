<style>
	table#pages th, table#pages td {
		text-align: left;
	}
	
	#content {
		width: 900px;
	}	
</style>

<h2 class="ic-db">Pages</h2>
<table id="pages">
	<thead>
		<th width="50px">ID</th>
		<th width="170px">Title</th>
		<th width="300px">Actions</th>
	</thead>
	<tbody>
		<% @pages.each do |page| %>
			<tr>
				<td><%= page.id %></td>
				<td><%= page.title %></td>
				<td>
					<%= link_to 'Edit', '/admin/page_edit?id=' + page.id.to_s %> |
					<%= link_to 'Delete', '/admin/page_delete?id=' + page.id.to_s, :confirm => 'Are you sure you want to delete this page?' %> |
				</td>
			</tr>
		<% end %>
	</tbody>
</table>


