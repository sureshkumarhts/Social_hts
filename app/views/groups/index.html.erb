<%= stylesheet_link_tag 'common' %>
<%= stylesheet_link_tag 'groups' %>
<%= stylesheet_link_tag 'profile' %>

<div id="groups_links">
	<% if logged_in? %>
		<div id="groups_all"><%#= link_to 'All Groups' %></div>
		<div id="groups_my"><%#= link_to 'My Groups', user_groups_path(current_user) %></div>
		<div id="groups_add"><%#= link_to 'Add a Group', new_group_path %></div>
	<% end %>
</div>

<% if @user %>
	<h1>My Groups (<%= @groups.size %>)</h1>
<% else %>
	<h1>Groups Directory(<%= @groups.size %>)</h1>
<% end %>

<div id="users_table_header">
	<div id="sort">
		<label for="sort_by">Sort by:</label>
		<select id="sort_groups_sel" onchange="sort_groups()">
			<% if @sort_field == 'created_at' %>
				<option value="created_at" selected="selected">Recently Added</option>
				<option value="name">Alphabetical</option>
			<% else %>
				<option value="created_at">Recently Added</option>
				<option value="name" selected="selected">Alphabetical</option>
			<% end %>
		</select>
	</div>
</div>


<div id="content_table">
	<% for group in @groups %>
		<%= render :partial => 'group_brief', :locals=>{:group=>group} %>
	<% end %>
</div>

