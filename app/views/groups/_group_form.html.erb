<% form_for(@group, :html => { :multipart => true }) do |f| -%>		
	<%= f.error_messages %>
	<% if defined? admin_page %>
		<input type="hidden" name="admin_page" value="1" />
	<% end %>
	<div class="section_title">Group Information</div>
	<div class="form_field">
    	<label for="name">Name:</label>
		<%= f.text_field :name, :class=>'input_field' %>
	</div>
	<div class="form_field">
    	<label for="photo">Image:</label>
		<% if (@group.profile_photo) %>
				<%= image_tag(@group.profile_photo.public_filename(:thumb)) %>
		<% end %>
		<%= file_field_tag :group_photo, :class=>'group_photo_field' %>
	</div>
	<div class="form_field">
    	<label for="description">Description:</label>
		<%= f.text_area :description, :cols=>40, :rows=>10, :class=>"mceEditor" %>
	</div>
        <div class="form_field">
    	   <%= f.check_box :private %> Private
	</div>


	<% if @show_full %>
		<div class="form_field">
	    	<label for="description">Announcements:</label>
			<%= f.text_area :announcements, :cols=>40, :rows=>10, :class=>"mceEditor" %>
		</div>
	<% end %>
	<div class="form_field">
    	<%= f.submit "Save Group", :class=>'add_button' %>
  	</div>
<% end %>